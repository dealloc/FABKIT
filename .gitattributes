# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source code
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.json text eol=lf

# Web assets
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.less text eol=lf
*.svg text eol=lf

# Configuration files
*.config.js text eol=lf
*.config.ts text eol=lf
*.config.mjs text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
LICENSE text eol=lf
README text eol=lf

# Package manager files
package.json text eol=lf
package-lock.json text eol=lf
bun.lock text eol=lf linguist-generated=true

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.avif binary

# Fonts
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Other binary files
*.pdf binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore
